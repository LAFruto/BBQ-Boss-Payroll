<div>
  <form class="row g-3 needs-validation" method="POST" action="/timekeeping/add-timesheet" enctype="multipart/form-data"
    novalidate>
    {{> timesheet-form}}
  </form>

  {{#if alert}}
  <div class="alert alert-primary alert-failed alert-dismissible fade show z-1" role="alert" style="width: 76%;">
    {{alert}}
    <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  {{/if}}
</div>