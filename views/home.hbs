<div class="row">
  <div class="col-6"><h1>Users</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ add user</a>
  </div>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Pet ID</th>
      <th scope="col">Owner ID</th>
      <th scope="col">Pet Name</th>
      <th scope="col">Pet Age</th>
      <th scope="col">Pet Gender</th>
      <th scope="col">Pet Price</th>
      <th scope="col">Pet Color</th>
      <th scope="col">Pet Breed</th>
      <th scope="col">Status ID</th>
      <th scope="col">Date Added</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows }}
    <tr>
      <th scope="row">{{this.pet_id}}</th>
      <td>{{this.owner_id}}</td>
      <td>{{this.pet_name}}</td>
      <td>{{this.pet_age}}</td>
      <td>{{this.pet_gender}}</td>
      <td>{{this.pet_price}}</td>
      <td>{{this.pet_color}}</td>
      <td>{{this.pet_breed}}</td>
      <td>{{this.status_id}}</td>
      <td>{{this.date_added}}</td>
      <td class="text-end">
        <a href="/viewuser/{{this.pet_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/edituser/{{this.pet_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
        <a href="/{{this.pet_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>