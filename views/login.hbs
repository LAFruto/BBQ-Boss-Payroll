<div class="container-scroller">
  {{#if alert}}
  <div class="alert alert-primary alert-failed alert-dismissible fade show" role="alert">
    {{alert}}
    <button
      type="button"
      class="btn btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  {{/if}}

  <div class="page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
      <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
          <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="mb-4" style="object-fit: contain;">
              <img
                src="/images/bbq-boss.png"
                class="mr-2"
                style="width: 90% !important; height: auto !important"
                alt="logo"
              />
            </div>
            <h4>Barbeque Boss Payroll</h4>
            <h6 class="font-weight-light">Sign in to continue.</h6>
            <form class="pt-3" method="POST" action="/" novalidate>
              <div class="form-group">
                <input
                  type="email"
                  class="form-control form-control-lg"
                  placeholder="Username"
                  name="user"
                />
              </div>
              <div class="form-group">
                <input
                  type="password"
                  class="form-control form-control-lg"
                  placeholder="Password"
                  name="password"
                />
              </div>
              <div class="mt-3">
                <button
                  type="submit"
                  class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"
                >SIGN IN</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>