<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <th scope="col">ID</th>
              <th scope="col">Employee</th>
              <th scope="col">Absent Date</th>
              <th scope="col">Actions</th>
            </thead>
            <tbody>
              {{#each rows}}
                <tr>
                  <td scope="row">{{this.emp_id}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.department}}</td>
                  <td>{{this.position}}</td>
                  <td>{{this.address}}</td>
                  <td>{{this.contact}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.date_hired}}</td>
                  <td>
                    <a type="button" class="btn btn-sm btn-primary"><i
                        class="bi bi-eye"
                      ></i>
                      View Profile</a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
