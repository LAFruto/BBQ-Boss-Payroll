<div class="row">
  <div class="card">
    <div class="card-body">
      <h4>Timekeeping Form</h4>
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="col-form-label">
              Branch
            </label>
            <select class="form-control form-select" name="branch" style="color: black;" required>
              {{#each rows}}
              <option value="{{branch_id}}">{{branch_name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4">
            <div class="form-group">
              <label class="col-form-label">
                Attach CSV file
              </label>
              <!-- file needs to be retained upon render -->
              <input class="form-control" name="excel" type="file" value={{fileValue}} />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-auto">
            <button class="btn btn-primary" type="submit">
              Import File
            </button>
          </div>
          <div class="col-sm-auto">
            <button class="btn btn-secondary">
              Cancel
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

